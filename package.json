{
  "name": "@cerusbots/runner",
  "version": "0.1.0",
  "description": "Bot runner for Cerus",
  "main": "dist/index.js",
  "types": "typings/index.d.ts",
  "type": "commonjs",
  "scripts": {
    "prepare": "is-ci || husky install",
    "install": "cd submodules/common && npm install",
    "postinstall": "patch-package",
    "build": "(cd submodules/common && npm run build) && tsc",
    "lint:js": "eslint --ext \".js,.ts\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint": "npm run lint:js && npm run lint:prettier",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CerusBots/runner.git"
  },
  "author": "Tristan Ross",
  "license": "GPL-3.0",
  "dependencies": {
    "@cerusbots/common": "file:submodules/common",
    "@kubernetes/client-node": "^0.17.0",
    "discord-api-types": "0.30.0",
    "discord.js": "file:submodules/discord.js",
    "emittery": "^0.11.0",
    "kafkajs": "^1.16.0",
    "patch-package": "^6.4.7",
    "vm2": "^3.9.10",
    "wait-on": "^6.0.1",
    "winston": "^3.8.1",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.33",
    "@types/wait-on": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "commitlint": "^16.2.4",
    "eslint": "^8.13.0",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint"
  }
}
